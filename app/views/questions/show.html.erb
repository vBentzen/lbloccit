<h1><%= @question.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
    <input type="checkbox"><%= @question.resolved %></p>
  </div>
</div>
<div class="col-md-4">
  <!-- #5 -->
  <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-success' %>
  <%= link_to 'Delete Post', @question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this post?'} %>

</div>
